{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/storage/upload/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "src/app/api/media-studio/**/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/cron/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}

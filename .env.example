# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron Job Security (for scheduled post publishing)
# Generate a secure random string: openssl rand -base64 32
CRON_SECRET=your_secure_cron_secret

# Email Service (Resend) - Optional but recommended for invitations
RESEND_API_KEY=re_your_resend_api_key
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Your App Name

# OpenAI API Key (for DALL-E, GPT Image)
OPENAI_API_KEY=sk-your_openai_api_key

# Google Gemini/Imagen API Key (for Imagen 4, Gemini Image)
GEMINI_API_KEY=your_gemini_api_key

# Canva Connect API (for embedded design editor)
# Get credentials from https://www.canva.dev/
CANVA_CLIENT_ID=your_canva_client_id
CANVA_CLIENT_SECRET=your_canva_client_secret

# TikTok OAuth (for TikTok posting)
# Get credentials from https://developers.tiktok.com/
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# YouTube OAuth (for YouTube posting and comment management)
# Get credentials from https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_google_client_id
YOUTUBE_CLIENT_SECRET=your_google_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/oauth/youtube/callback

# Facebook/Instagram OAuth (for posting and comment management)
# Get credentials from https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# Note: Copy this file to .env.local and fill in your actual values
